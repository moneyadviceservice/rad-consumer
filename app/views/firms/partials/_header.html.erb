<div class="firm__header">
  <%= heading_tag(@firm.name, level: 2, class: 'firm__name') %>
  <div class="firm__adviser-distance">
    <%= t('search.result.adviser') %>
    <%= @firm.closest_adviser %>
  </div>

  <div class="firm__links">
    <a href="tel:<%= @firm.telephone_number %>">
      <svg title="<%= t('firms.show.telephone_number') %>" xmlns="http://www.w3.org/2000/svg" class="firm__svg" focusable="false">
        <use xlink:href="#icon-phone"></use>
      </svg><%= @firm.telephone_number %>
    </a>
    <a href="mailto:<%= @firm.email_address %>">
      <svg title="<%= t('firms.show.email_address') %>" xmlns="http://www.w3.org/2000/svg" class="firm__svg" focusable="false">
        <use xlink:href="#icon-email"></use>
      </svg><%= t('firms.show.email_firm') %>
    </a>
    <a href="<%= @firm.website_address %>">
      <svg title="<%= t('firms.show.email_address') %>" xmlns="http://www.w3.org/2000/svg" class="firm__svg" focusable="false">
        <use xlink:href="#icon-url"></use>
      </svg><%= t('firms.show.website') %>
    </a>
  </div>
</div>
