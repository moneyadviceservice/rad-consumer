<div class="l-constrained">
  <div class="l-landing-page__with-border">

    <!-- TEST RENDERING OF THE ICONS - DO NOT MERGE -->

    <div class="new-icon">
      <svg class="svg-icon svg-icon-telephone" xmlns="http://www.w3.org/2000/svg" style="border: 1px solid grey">
        <use xlink:href="#icon-telephone"></use>
      </svg>
      <svg class="svg-icon svg-icon-offsite-link" xmlns="http://www.w3.org/2000/svg" style="border: 1px solid grey">
        <use xlink:href="#icon-offsite-link"></use>
      </svg>
      <svg class="svg-icon svg-icon-envelope" xmlns="http://www.w3.org/2000/svg" style="border: 1px solid grey">
        <use xlink:href="#icon-envelope"></use>
      </svg>
    </div>

    <div class="new-icon">
      <svg class="svg-icon svg-icon-tick-mark" xmlns="http://www.w3.org/2000/svg" style="border: 1px solid grey">
        <use xlink:href="#icon-tick-mark"></use>
      </svg>
      <svg class="svg-icon svg-icon-map-pin" xmlns="http://www.w3.org/2000/svg" style="border: 1px solid grey">
        <use xlink:href="#icon-map-pin"></use>
      </svg>
      <svg class="svg-icon svg-icon-computer-screen" xmlns="http://www.w3.org/2000/svg" style="border: 1px solid grey">
        <use xlink:href="#icon-computer-screen"></use>
      </svg>
    </div>

    <div class="new-icon">
      <svg class="svg-icon svg-icon-house" xmlns="http://www.w3.org/2000/svg" style="border: 1px solid grey">
        <use xlink:href="#icon-house"></use>
      </svg>
      <svg class="svg-icon svg-icon-telephone-ringing" xmlns="http://www.w3.org/2000/svg" style="border: 1px solid grey">
        <use xlink:href="#icon-telephone-ringing"></use>
      </svg>
      <svg class="svg-icon svg-icon-tooltip" xmlns="http://www.w3.org/2000/svg" style="border: 1px solid grey">
        <use xlink:href="#icon-tooltip"></use>
      </svg>
    </div>

    <div class="new-icon">
      <svg class="svg-icon svg-icon-map-pin-adviser" xmlns="http://www.w3.org/2000/svg" style="border: 1px solid grey">
        <use xlink:href="#icon-map-pin-adviser"></use>
      </svg>
      <svg class="svg-icon svg-icon-map-pin-office" xmlns="http://www.w3.org/2000/svg" style="border: 1px solid grey">
        <use xlink:href="#icon-map-pin-office"></use>
      </svg>
    </div>

    <section class="l-landing-page__1col">
      <%= heading_tag(level: 1, class: 'l-landing-page__title') do %>
        <%= t('page_title') %>
        <sup class="beta-tag"><%= t('beta_tag') %></sup>
      <% end %>
      <div class="l-landing-page__register-link">
        <%= link_to t('rad_signup_link'), rad_signup_url %>
      </div>
      <p><%= t('trust_banner.heading') %></p>

      <ul class="list-benefits banner-list">
        <% t('trust_banner.items').each do |item| %>
          <li data-further-info>
            <%= raw item[:text] %>
            <% if item[:tooltip] %>
              <a class="further-info__trigger" href="" data-further-info-trigger><%= t('learn_more') %><span class="visually-hidden"><%= t('learn_more_hidden_text') %></span></a>
              <p class="is-hidden further-info__content" data-further-info-target><%= item[:tooltip] %></p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </section>
  </div>
</div>

<div class="l-constrained">
  <div class="l-landing-page__with-border">
    <section class="l-landing-page__2col">
      <%= heading_tag(t('find_retirement_adviser.heading'), level: 2) %>
      <p><%= t('find_retirement_adviser.description') %></p>

      <%= render 'landing_page/search_filter' %>
    </section>

    <section class="l-landing-page__2col">
      <%= heading_tag(t('find_retirement_adviser.subheading'), level: 2) %>
      <div class="video-wrapper">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/_MMnVaQeFqk?rel=0" frameborder="0" allowfullscreen></iframe>
      </div>
      <p class="video__description"><%= t('find_retirement_adviser.video.description') %></p>
      <a class="video__transcript-link" target="_blank" href="<%= t('find_retirement_adviser.video.download_transcript_link') %>"><%= t('find_retirement_adviser.video.download_transcript_text') %></a>

      <div class="advert">
        <%= image_tag('pensionwise_logo.png', class: 'advert__img', alt: '') %>
        <%= heading_tag(t('pension_wise.heading'), level: 3, class: 'heading-extra-small') %>
        <% t('pension_wise.description').each do |item| %>
          <p class="advert__intro"><%= raw item[:text] %></p>
        <% end %>
      </div>

      <section data-education-module>
        <%= heading_tag(level: 3, class: 'education__heading', data: { education_module_heading: '' }) do %>
          <span class="education__heading-text"><%= t('workplace_scheme.question') %></span>
        <% end %>
        <p class="is-hidden education__content" data-education-module-target><%= t('workplace_scheme.tooltip') %></p>
      </section>
    </section>
  </div>
</div>

<section class="l-constrained">
  <div class="l-landing-page__with-border">
    <div class="l-landing-page__2col l-landing-page__2col--right">
      <%= heading_tag(t('more_reasons.heading'), level: 2) %>

      <ul class="list-benefits">
        <% t('more_reasons.key_points').each do |item| %>
          <li><%= item[:text] %></li>
        <% end %>
      </ul>

      <p><%= t('more_reasons.guides_html') %></p>
    </div>

    <div class="l-landing-page__2col l-landing-page__2col--padded">
      <div class="video-wrapper">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/5LbktkByOeo?rel=0" frameborder="0" allowfullscreen></iframe>
      </div>
      <p class="video__description"><%= t('more_reasons.video.description') %></p>
      <a class="video__transcript-link" target="_blank" href="<%= t('more_reasons.video.download_transcript_link') %>"><%= t('more_reasons.video.download_transcript_text') %></a>
    </div>
  </div>
</section>

<div class="l-constrained">
  <section class="l-landing-page__3col">
    <%= heading_tag(t('useful_links.heading'), level: 2, class: 'l-landing-page__heading') %>
    <ul class="unstyled-list">
      <% t('useful_links.links').each do |item| %>
        <li><a href="<%= item[:url] %>"><%= item[:text] %></a></li>
      <% end %>
    </ul>
  </section>

  <section class="l-landing-page__3col">
    <%= heading_tag(t('our_promise.heading'), level: 2, class: 'l-landing-page__heading') %>
    <ul class="list-benefits">
      <% t('our_promise.key_points').each do |item| %>
        <li><%= item[:text] %></li>
      <% end %>
    </ul>
  </section>

  <section class="l-landing-page__3col">
    <%= heading_tag(t('retirement_income_options.heading'), level: 2, class: 'l-landing-page__heading') %>
    <p><%= t('retirement_income_options.content') %></p>
    <a class="button button--primary l-landing-page__button " href="<%= t('retirement_income_options.link_url') %>" target="_blank"><%= t('retirement_income_options.link_text') %></a>
  </section>
</div>
