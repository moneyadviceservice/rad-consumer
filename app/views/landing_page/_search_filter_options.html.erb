<fieldset class="search-filter__section">
  <legend class="search-filter__label"><%= t('search_filter.subheading') %></legend>
  <p class="search-filter__label-instructions"><%= t('search_filter.instructions') %></p>
  <%= f.form_row(:checkbox) do %>
    <%= f.errors_for :checkbox %>

    <div class="form__group-item" data-further-info>
      <%= f.check_box :checkbox, class: 'form__group-input search-filter__checkbox', data: { nested_options_trigger: '' } %>
      <%= f.label :checkbox, class: 'search-filter__option' do %>
        <%= t('search_filter.in_person.retirement_income_products.heading') %>
        <a href="" class="further-info__trigger" data-further-info-trigger><%= t('learn_more') %></a>
        <p class="is-hidden further-info" data-further-info-target><%= t('search_filter.in_person.retirement_income_products.tooltip') %></p>
      <% end %>
    </div>

    <div class="search-filter__nested-options is-hidden" data-nested-options>
      <div class="form__group-item" data-further-info>
        <%= f.label :checkbox, t('search_filter.pension_pot.heading'), class: 'form__label-heading' %>
        <%= f.select :checkbox, PotSize.all, { include_blank: true }, { class: 'search-filter__inset' } %>
      </div>

      <div class="form__group-item" data-further-info>
        <%= f.check_box :pension_transfer, class: 'form__group-input search-filter__checkbox' %>
        <%= f.label :pension_transfer, t('search_filter.pension_transfer.heading'), class: 'search-filter__option' %>
      </div>
    </div>

    <% t('search_filter.in_person.options').each do |item| %>
      <div class="form__group-item" data-further-info>
        <%= f.check_box :checkbox, class: 'form__group-input search-filter__checkbox' %>
        <%= f.label :checkbox, class: 'search-filter__option' do %>
          <%= raw item[:title] %>
          <a href="" class="further-info__trigger" data-further-info-trigger><%= t('learn_more') %></a>
          <p class="is-hidden further-info" data-further-info-target><%= raw item[:tooltip] %></p>
        <% end %>
      </div>
    <% end %>

  <% end %>
</fieldset>
