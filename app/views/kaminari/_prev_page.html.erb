<span class="prev">
  <% unless current_page.first? %>
    <%= link_to(url, rel: 'prev', class: 'pagination__button button button--compact') do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="pagination__icon">
        <use xlink:href="#icon-pagination-prev"></use>
      </svg>
      <span class="button--compact__text"><%= t('pagination.previous').html_safe %></span>
    <% end %>
  <% end %>
</span>
