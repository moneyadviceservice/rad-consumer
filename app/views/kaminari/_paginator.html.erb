<%= paginator.render do -%>
  <nav class="pagination">
    <%= prev_page_tag unless current_page.first? %>
    <div class="pagination__counter">
      <%= t('pagination.page') %> <%= current_page %> <%= t('pagination.of') %> <%= total_pages %>
    </div>
    <%= next_page_tag unless current_page.last? %>
  </nav>
<% end -%>
