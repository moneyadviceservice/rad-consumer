                <span class="icon icon--youtube"></span>
                <span class="visually-hidden"><%= t('contact_panels.social.youtube') %></span>
              </a>
            </div>

            <p class="contact-panel__additional-info"><%= t('contact_panels.social.contact_html') %></p>
