<div class="l-contact-panel">
  <div class="contact-panel">
    <h2 aria-level="2" class="contact-panel__heading t-contact-heading" role="heading"><span class="icon icon--call-us"></span><%= t('contact_panels.call_us.heading') %></h2>
    <p class="t-contact-introduction"><%= t('contact_panels.call_us.description') %></p>
    <p><a class="contact-panel__telephone t-contact-number" href="<%= t('contact_panels.call_us.telephone_number_url') %>"><%= t('contact_panels.call_us.telephone_number') %> *</a></p>

    <ul class="contact-panel__list">
      <li class="contact-panel__additional-info"><%= t('contact_panels.call_us.opening_hours.weekdays') %></li>
      <li class="contact-panel__additional-info"><%= t('contact_panels.call_us.opening_hours.saturday') %></li>
    </ul>

    <p class="smallprint">* <%= t('contact_panels.call_us.smallprint_html') %></p>
  </div>
</div>
